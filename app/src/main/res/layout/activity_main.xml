<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email"
        android:background="@drawable/edittext"
        android:layout_marginVertical="32dp"
        android:textSize="40sp"
        app:layout_constraintCircleRadius="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:hint="@string/subject"
        android:layout_height="wrap_content"
        android:autofillHints="0" />
    <EditText
        android:id="@+id/theme"
        android:background="@drawable/edittext"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/theme"
        android:inputType="text"
        android:textSize="40sp"
        android:layout_height="wrap_content"
        android:autofillHints="0" />
    <EditText
        android:background="@drawable/end"
        android:id="@+id/sms"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="@+id/theme"
        app:layout_constraintEnd_toEndOf="@id/theme"
        app:layout_constraintTop_toBottomOf="@id/theme"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/massage"
        android:inputType="text"
        android:textSize="40sp"
        android:layout_height="wrap_content"
        android:autofillHints="0" />
    <Button
        android:id="@+id/send"
        android:background="@drawable/edittext"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/send"
        android:textSize="36sp"
        android:layout_marginVertical="120dp"
        app:layout_constraintTop_toBottomOf="@id/sms"
        app:layout_constraintStart_toStartOf="@id/sms"
        app:layout_constraintEnd_toEndOf="@id/sms"/>



</androidx.constraintlayout.widget.ConstraintLayout>